  <!-- Properties that ought to be defined in project:
       ** apigee.edge.skip: [default: false]
            skip the packaging and deployment to edge?
       ** apigee.edge.orgname:
            What org name to deploy to (user must have rights)
       ** apigee.edge.username:
            What user to authenticate (must have rights to the defined org)
       ** apigee.edge.password:
            What password to use in authenticating the user
       ** apigee.edge.profile: [default: test]
            What profile to use (generally, test or prod)
       ** apigee.edge.env: [default: apigee.edge.profile]
            What environment to deploy to (generally test or prod)
  -->
  <properties>
    <apigee.edge.skip>$apigeeEdgeSkip</apigee.edge.skip>
    <apigee.edge.env>$apigeeEdgeProfile</apigee.edge.env>
    <orgName>$apigeeEdgeOrgname</orgName>
    <orgUserId>$apigeeEdgeUsername</orgUserId>
    <orgPassword>$apigeeEdgePassword</orgPassword>
    <apiName>$apigeeEdgeApiName</apiName>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <org>${orgUserId}</org>
    <options>validate</options>
    <apigee.profile>$apigeeEdgeProfile}</apigee.profile>
    <apigee.env>$apigeeEdgeEnv</apigee.env>
    <apigee.hosturl>https://api.enterprise.apigee.com</apigee.hosturl>
    <apigee.apiversion>v1</apigee.apiversion>
    <apigee.org>${org}</apigee.org>
    <apigee.username>${orgName}</apigee.username>
    <apigee.password>${orgPassword}</apigee.password>
    <apigee.apiname>${apiName}</apigee.apiname>
    <apigee.options>${options}</apigee.options>
  </properties>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.7</version>
        <executions>
          <execution>
            <id>copy-resources</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${basedir}/target/apiproxy</outputDirectory>
              <resources>
                <resource>
                  <directory>${basedir}/apiproxy</directory>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>io.apigee.build-tools.enterprise4g</groupId>
        <artifactId>apigee-edge-maven-plugin</artifactId>
        <version>1.0.1</version>
        <configuration>
          <skip>$apigeeEdgeSkip</skip>
          <!-- Use this module level config to skip module build. Make it true -->
        </configuration>
        <executions>
          <execution>
            <id>configure-bundle</id>
            <phase>package</phase>
            <goals>
              <goal>configure</goal>
            </goals>
          </execution>
          <execution>
            <id>deploy-bundle</id>
            <phase>install</phase>
            <goals>
              <goal>deploy</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
